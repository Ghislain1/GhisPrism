<Window
    x:Class="GhisPrism.Views.Shell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ghis="http://Ghisprism/sample/wpf/2017/core"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    Title="Shell"
    Width="1300"
    Height="700"
    mc:Ignorable="d">
    <materialDesign:DialogHost Identifier="Root" IsOpen="False">
        <materialDesign:DrawerHost IsLeftDrawerOpen="{Binding ElementName=MenuToggleButton, Path=IsChecked}">
            <!--  Left content  -->
            <materialDesign:DrawerHost.LeftDrawerContent>
                <DockPanel MinWidth="220">
                    <TextBox
                        x:Name="DemoItemsSearchBox"
                        Width="200"
                        Margin="16,4"
                        materialDesign:HintAssist.Hint="Search"
                        materialDesign:HintAssist.IsFloating="True"
                        materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
                        materialDesign:TextFieldAssist.HasClearButton="True"
                        materialDesign:TextFieldAssist.HasOutlinedTextField="True"
                        materialDesign:TextFieldAssist.TextFieldCornerRadius="4"
                        BorderThickness="0"
                        DockPanel.Dock="Top"
                        Text="Comming Soon!!!" />
                    <Rectangle Fill="Green" Opacity="0.4" />
                </DockPanel>
            </materialDesign:DrawerHost.LeftDrawerContent>

            <!--  Main content  -->
            <DockPanel>
                <materialDesign:ColorZone
                    Padding="16"
                    materialDesign:ShadowAssist.ShadowDepth="Depth2"
                    Background="Green"
                    DockPanel.Dock="Top"
                    Mode="PrimaryDark"
                    Opacity="0.8">
                    <DockPanel>
                        <ToggleButton
                            x:Name="MenuToggleButton"
                            Click="MenuToggleButton_OnClick"
                            IsChecked="False"
                            Style="{StaticResource MaterialDesignHamburgerToggleButton}" />
                        <materialDesign:PopupBox
                            DockPanel.Dock="Right"
                            PlacementMode="BottomAndAlignRightEdges"
                            StaysOpen="False">
                            <StackPanel>
                                <Button Content="Commin soon!... " IsEnabled="False" />
                                <Separator />
                            </StackPanel>
                        </materialDesign:PopupBox>
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="22"
                            Text="GhisOne-App" />
                    </DockPanel>
                </materialDesign:ColorZone>

                <Grid x:Name="MainGrid">
                    <Grid.RowDefinitions>

                        <!--  Ribbon placement  -->
                        <RowDefinition Height="Auto" />

                        <!--  GridSplitter  -->
                        <RowDefinition Height="Auto" />

                        <RowDefinition />
                        <!--  Status bar  -->
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>

                        <ColumnDefinition Width="auto" MinWidth="100" />

                        <!--  GridSplitter  -->
                        <ColumnDefinition Width="Auto" />

                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <!--  placeholder for ribbon  -->
                    <ContentControl
                        Grid.Row="0"
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        prism:RegionManager.RegionName="{x:Static ghis:RegionNames.RibbonRegion}" />

                    <!--  horizontal GridSplitter  -->
                    <GridSplitter
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        Height="5"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Background="Black"
                        ShowsPreview="True" />

                    <!--  placeholder for treeview  -->
                    <ContentControl
                        Grid.Row="2"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        prism:RegionManager.RegionName="{x:Static ghis:RegionNames.PackageListViewRegion}" />

                    <!--  vertical  GridSplitter  -->
                    <GridSplitter
                        Grid.Row="2"
                        Grid.Column="1"
                        Width="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Stretch"
                        Background="Black"
                        ShowsPreview="True" />

                    <!--  placeholder for content view  -->
                    <ContentControl
                        Grid.Row="2"
                        Grid.Column="2"
                        Grid.ColumnSpan="2"
                        prism:RegionManager.RegionName="{x:Static ghis:RegionNames.FileItemContentsViewRegion}" />

                    <!--  placeholder for status bar view  -->
                    <ContentControl
                        Grid.Row="3"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        prism:RegionManager.RegionName="{x:Static ghis:RegionNames.StatusBarRegion}" />
                </Grid>
            </DockPanel>
        </materialDesign:DrawerHost>
    </materialDesign:DialogHost>
</Window>